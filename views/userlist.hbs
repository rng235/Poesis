<div class=form-background>
    <div id=formContainer>
        <form class="form-horizontal" method="post" action="/userlist">
            <div class="form-group">
                <label for="title">Title</label>
                <div class="controls">
                    <input type="text" id="title" name="title" class="form-control input-xlarge ">
                </div>
            </div>

            <div class="form-group">
                <label for="author">Author</label>
                <div class="controls">
                    <input type="text" id="author" name="author" class="form-control input-xlarge ">
                </div>
            </div>

            <div class="form-group">
                <label for="date">Date</label>
                <div class="controls">
                    <input type="date" id="date" name="date" class="form-control input-xlarge ">
                </div>
            </div>

            <div class="form-group">
                <div class="controls">
                    <textarea name="content" class="form-control input-xlarge"></textarea>
                </div>
            </div>
            <!--<input class="submission" type="text" name="content">-->


            <p></p>
            <input type="submit" value="Submit Content">

        </form>
    </div>


</div>

<br><br><br><br>


<!--Output Each Poem in the database-->
{{#each list}}
    {{#each this.userPoems}}
    <div class=container>
        <div class=poem>
            <h2 class = "poemTitle">{{this.title}}</h2>
            <div class = "poemAuthor">{{this.author}}</div>
            <!--<div>{{this.date}}</div>-->
            <p class="lead"> {{{this.content}}}</p>
            <div class="page-header"></div>
        </div>
    </div>
    {{/each}}
{{/each}}
</body>
</html>